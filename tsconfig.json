{
  "exclude": ["node_modules", "lib", "src/test"],
  "compilerOptions": {
    "outDir": "./lib",
    "strict": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "lib": ["es6", "es7", "dom"]
  }
}
